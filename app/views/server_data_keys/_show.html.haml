%h3
  Key

%table.table.table-bordered.server-data.server-data-key
  %tbody
    %tr
      %th
        = resource.class.human_attribute_name :name
      %td
        = resource.name
    %tr
      %th
        = resource.class.human_attribute_name :private_key
      %td
        = server_hidden_data private_key_group_server_server_data_key_path(resource.server.group, resource.server, resource)
    %tr
      %th
        = resource.class.human_attribute_name :public_key
      %td

        .toggle-key
          %button.btn.btn-success.btn-mini
            Toggle
          %pre.info{:style=>'display: none'}= resource.public_key
