= form_for [@group, resource], :html => { :class => 'form-horizontal' } do |f|

  = render 'basic_fields', :f => f

  #server-data
    - Server.data_types.each do |type|
      = f.fields_for type do |data|
        = render "#{type}/fields", :f => data

  .btn-group
    = link_to '#', :class => ['btn', 'btn-warning', 'dropdown-toggle'], 'data-toggle' => 'dropdown' do
      New Section
      %span.caret

    %ul.dropdown-menu
      - Server.data_types.each do |type|
        %li= link_to_add_fields "Add #{t('.new_section.' + type.to_s)}", f, type, :partial => "#{type}/fields", :container => '#server-data'

  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
