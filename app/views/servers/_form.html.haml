= form_for [@group, resource], :html => { :class => 'form-horizontal' } do |f|

  = render 'servers/basics/fields', :f => f

  = f.fields_for :server_data_keys do |data|
    = render 'servers/server_data_keys/fields', :f => data

  .new_section_links
    = link_to_add_fields "Add Data Key", f, :server_data_keys, "servers/#{:server_data_keys}/fields"

  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
