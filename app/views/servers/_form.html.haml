= form_for [@group, resource], :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'


  .control-group
    = f.label :group, :class => 'control-label'
    .controls
      = f.select :group_id, Group.all.map {|x| [x.name, x.id]}


  = f.fields_for :server_data_keys do |data|
    = render 'server_data_key_fields', :f => data

  .new_section_links
    = link_to_add_fields "Add Data Key", f, :server_data_keys






  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
