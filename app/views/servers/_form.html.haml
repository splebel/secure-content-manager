= form_for [@group, resource], :html => { :class => 'form-horizontal' } do |f|

  = render 'server_basic_fields', :f => f

  = f.fields_for :server_data_keys do |data|
    = render 'server_data_key_fields', :f => data

  .new_section_links
    = link_to_add_fields "Add Data Key", f, :server_data_keys

  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
